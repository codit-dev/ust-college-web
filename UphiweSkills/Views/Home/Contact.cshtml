@using UphiweSkills.Models
@model ContactViewModel
@{
    ViewBag.Title = "Contact";
}

<!-- ******CONTENT****** -->
<div class="content container">
    <div class="page-wrapper">
        <header class="page-heading clearfix">
            <h1 class="heading-title float-left">Contact</h1>
            <div class="breadcrumbs float-right">
                <ul class="breadcrumbs-list">
                    <li class="breadcrumbs-label">You are here:</li>
                    <li><a href="@Url.Action("Index","Home")">Home</a><i class="fas fa-angle-right"></i></li>
                    <li class="current">Contact</li>
                </ul>
            </div><!--//breadcrumbs-->
        </header>
        <div class="page-content">
            <div class="row">
                <article class="contact-form col-lg-8 col-md-7  col-12 page-row">
                    <h3 class="title">Get in touch</h3>
                    <p>We’d love to hear from you. We're here to answer any questions that you may have regarding enrollment.</p>
                            
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group name">
                            @Html.LabelFor(m => m.FromName, new { @for = "name"})
                            @Html.TextBoxFor(m => m.FromName, new { @class = "form-control", id = "name", placeholder = "Enter your name", required = "required"})
                            @Html.ValidationMessageFor(m => m.FromName, null, new { @class = "text-danger" })
                        </div><!--//form-group-->
                        <div class="form-group email">
                            @Html.LabelFor(m => m.FromEmail, new { @for = "email"})
                            @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control", id = "email", placeholder = "Enter your email", type = "email", required = "required" })
                            @Html.ValidationMessageFor(m => m.FromEmail, null, new { @class = "text-danger" })
                        </div><!--//form-group-->
                        <div class="form-group subject">
                            @Html.LabelFor(m => m.Subject, new { @for = "subject"})
                            @Html.DropDownListFor(m => m.Subject, new SelectList(Enum.GetValues(typeof(EmailSubject)).Cast<EmailSubject>(), "Subject"), "What can we assist you with?", new { @class = "form-control", id = "subject"})
                            @Html.ValidationMessageFor(m => m.Subject, null, new { @class = "text-danger" })
                        </div><!--//form-group-->
                        <div class="form-group phone">
                            @Html.LabelFor(m => m.FromPhoneNumber, new { @for = "phone"})
                            @Html.TextBoxFor(m => m.FromPhoneNumber, new { @class = "form-control", id = "phone", placeholder = "Enter your contact number", type = "tel" })
                        </div><!--//form-group-->
                        <div class="form-group message">
                            @Html.LabelFor(m => m.Message, new { @for = "message"})
                            @Html.TextAreaFor(m => m.Message, new { @class = "form-control", id = "message", placeholder = "Enter your message here...", rows = "6", required = "required" })
                            @Html.ValidationMessageFor(m => m.Message, null, new { @class = "text-danger" })
                        </div><!--//form-group-->
                        <button type="submit" class="btn btn-theme">Send message</button>
                    }

                </article><!--//contact-form-->
                <aside class="page-sidebar  col-lg-3 offset-lg-1 col-md-4 offset-md-1">
                    <section class="widget has-divider">
                        <h3 class="title">Download Prospectus</h3>
                        <p>Donec pulvinar arcu lacus, vel aliquam libero scelerisque a. Cras mi tellus, vulputate eu eleifend at, consectetur fringilla lacus. Nulla ut purus.</p>
                        <a class="btn btn-theme" href="#"><i class="fas fa-download"></i>Download now</a>
                    </section><!--//widget-->

                    <section class="widget has-divider">
                        <h3 class="title">Physical Address</h3>
                        <p class="adr">
                            <span class="adr-group">
                                <span class="street-address">397 Chamberlain Road</span><br />
                                <span class="suburb">Jacobs</span><br />
                                <span class="city">Durban</span><br />
                                <span class="postal-code">4052</span><br />
                            </span>
                        </p>
                    </section><!--//widget-->

                    <section class="widget">
                        <h3 class="title">All Enquiries</h3>
                        <p class="tel"><i class="fas fa-phone"></i>031 811 1007</p>
                        <p class="tel"><i class="fas fa-phone"></i>031 829 1940</p>
                        <p class="tel"><i class="fab fa-whatsapp"></i> 061 415 4001 </p>
                        <p class="email"><i class="fas fa-envelope"></i><a href="mailto:info@uphiweskills.co.za">info@uphiweskills.co.za</a></p>
                    </section>
                </aside><!--//page-sidebar-->
            </div><!--//page-row-->
            <div class="page-row">
                <article class="map-section">
                    <h3 class="title">How to find us</h3>
                    <div class="gmap-wrapper" id="map">
                        <iframe width="600" height="450" frameborder="0" style="border:0" src="https://www.google.com/maps/embed/v1/place?key=AIzaSyAnWv1I50e2WtMSzEcMxs4PIta-C-qS8ig&q=Uphiwe+Skills+Training" allowfullscreen></iframe>
                    </div><!--//gmap-wrapper-->
                </article><!--//map-->
            </div><!--//page-row-->
        </div><!--//page-content-->
    </div><!--//page-wrapper-->
</div><!--//content-->


<!-- ******HEADER****** -->
<header class="header">
    <div class="top-bar">
        <div class="container">
            <div class="row">
                <ul class="social-icons col-md-6 col-12 d-none d-md-block">
                    <li><a href="https://www.facebook.com/uphiwe.konke.1"><i class="fab fa-facebook-f"></i></a></li>
                    <li class="row-end"><a href="https://twitter.com/UphiweSkills?lang=en"><i class="fab fa-twitter"></i></a></li>
                </ul><!--//social-icons-->
                <form class="col-md-6 col-12 search-form" role="search">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Search the site...">
                    </div>
                    <button type="submit" class="btn btn-theme">Go</button>
                </form>
            </div><!--//row-->
        </div>
    </div><!--//to-bar-->
    <div class="header-main container">
        <div class="row">
            <h1 class="logo col-md-4 col-12">
                <a href="/Home/Index"><img id="logo" src="~/Content/Images/logo.png" width="230" height="63" alt="Logo"></a>
            </h1><!--//logo-->
            <div class="info col-md-8 col-12">
                <ul class="menu-top float-right d-none d-md-block">
                    <li class="divider">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="divider">@Html.ActionLink("FAQ", "FAQ", "Home")</li>
                    <li class="divider">@Html.ActionLink("Contact", "Contact", "Home")</li>
                    @Html.Partial("_LoginPartial")
                </ul>
                <br />
                <div class="contact float-right">
                    <p class="phone"><i class="fas fa-phone"></i>Call us today on 031 811 1007</p>
                    <p class="email"><i class="fas fa-envelope"></i><a href="mailto:info@uphiweskills.co.za">info@uphiweskills.co.za</a></p>
                </div><!--//contact-->
            </div><!--//info-->
        </div><!--//row-->
    </div><!--//header-main-->
</header><!--//header-->

